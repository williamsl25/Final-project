.studentbackground 
  .row
    .col-md-6.col-lg-6.teacher
      %h2.student
        Students
  .row.addteach
    .col-sm-6.col-md-12
      .teacherlink
        .text-center
          - @students.each do |student|
            .div
              .col-md-3.col-md-offset-6.teachlist
                .list-group-item
                  .text-center 
                    = link_to student.first_name + ' ' +student.last_name, student_path(student)
                    
                    %br
                    =student.date_of_birth.strftime("%m/%d/%Y")
                    %br
                    - if can? :update, Student
                      = link_to edit_student_path(student) do
                        %span.glyphicon.glyphicon-pencil
                      = link_to student_path(student), method: :delete do
                        %span.glyphicon.glyphicon-remove
                      %br
                      %br
  

          - if can? :create, Student
            .div 
              .col-md-3.col-md-offset-6.teachlist 
                .list-group-item 
                  .text-center.addTeacher        
                    Add Student
                  %br

                  = link_to new_student_path do
                    %span.glyphicon.glyphicon-plus.addTeacher
                  %br
                  %br

 

