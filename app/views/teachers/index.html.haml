.teacherbackground
  .row
    .col-md-6.col-lg-6.teacher
      %h2.teacher
        Teachers
        %br
  
  .row.addteach
    .col-sm-12.col-md-12.col-lg-12
      .teacherlink
        - if can? :create, Teacher
        = link_to "Add a Teacher", new_teacher_path
          .text-center
            - @teachers.each do |teacher|
              .div
                .col-md-4.col-lg-12
                  .list-group-item.teachers
                    .text-center
                      .teachlist
                        = link_to teacher.name, teacher_path(teacher)
                      
                      %br
                    - if can? :update, Teacher
                      = link_to "Edit Teacher", edit_teacher_path(teacher)
                      |
                      = link_to "Delete Teacher", teacher_path(teacher), method: :delete
                    %br
                