.container.marketing  
  .row.featurette
    .col-md-6.col-lg-6      
      %h2.featurette-heading
        = @teacher.name
        %span.text-muted 
          = @teacher.grade
      %br
      = link_to "Edit", edit_teacher_path(@teacher)
      |
      = link_to "Delete", teacher_path(@teacher), method: :delete

.container    
  .row.featurette 
    .col-md-6.col-lg-6
      .list-group-item
        .text-center
          %p.lead.teaching 
            I teach the following reading groups:
            %br
          - @programs.each do |program|
            %h3.lead
              = program.name 
            Focus:
            = program.focus
          %br
.container.marketing      
  .row.featurette
    .col-md-6.col-lg-6
      %br
      = link_to "Back to teachers", teachers_path
      |
      = link_to "Students", students_path
      |
      = link_to "Programs", programs_path
          
   
            
      