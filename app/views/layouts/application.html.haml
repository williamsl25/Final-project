!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %link{:href => "../../favicon.ico", :rel => "icon"}
    %title Meeting of the Minds
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css", :rel => "stylesheet"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"}
    = csrf_meta_tags     
    %link{:href => "https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300", :rel => "stylesheet", :type => "text/css"}/        
    %script{src:"https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
    %link{:href => "https://fonts.googleapis.com/css?family=Satisfy", :rel => "stylesheet", :type => "text/css"}/

             
  / NAVBAR
  %body
    .navbar-wrapper
      .container
        %nav.navbar.navbar-inverse.navbar-static-top
          .container
            .navbar-header
              %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                   
              %a.navbar-brand{:href => "#"} Meeting of the Minds
              
            #navbar.navbar-collapse.collapse
              %ul.nav.navbar-nav
                %li.active
                  = link_to "Home", root_path
                %li
                  %a{:href => "mailto: williamsl25.com?subject=Student Input", :target => "_blank"} Contact
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    Reading Interventions
                    %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      %a{:href => "#"} Phonemic Awareness
                    %li
                      %a{:href => "#"} Phonics
                    %li
                      %a{:href => "#"} Oral Reading Fluency
                    %li
                      %a{:href => "#"} Reading Comprehension
                    %li
                      %a{:href => "#"} Vocabulary
                    
              %ul.nav.navbar-nav.navbar-right
                -if current_user
                  %li
                    = link_to "Logout: #{current_user.email}", destroy_user_session_path, method: :delete 
                -else
                  %li
                    = link_to "Login", new_user_session_path
                  %li
                    = link_to "Register", new_user_registration_path



  .col-md-12.col-lg-12.noticemsg    
    %h3.alert 
    - if notice || alert
      %p.notice= notice
      %p.alert= alert

  = yield
  %footer.footer
    .container
      %p.lead.footer 
      - if can? :read, Teacher
        = link_to "Teachers", teachers_path
        |
      - if can? :read, Student
        = link_to "Students", students_path
        |
      - if can? :read, Program
        = link_to "Programs", programs_path 

    
    / 
      Bootstrap core JavaScript
      \==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"}
    %script{:src => "../../dist/js/bootstrap.min.js"}
    %script{:src => "../../assets/js/docs.min.js"}
    / IE10 viewport hack for Surface/desktop Windows 8 bug
    %script{:src => "../../assets/js/ie10-viewport-bug-workaround.js"}