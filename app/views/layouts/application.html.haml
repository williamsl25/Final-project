!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %link{:href => "../../favicon.ico", :rel => "icon"}
    %title Meeting of the Minds
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags     
             
    %script{src:"https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
    %link{:href => "http://fonts.googleapis.com/css?family=Oxygen:400,300", :rel => "stylesheet", :type => "text/css"}/
             
  / NAVBAR
  %body
    .navbar-wrapper
      .container
        %nav.navbar.navbar-inverse.navbar-static-top
          .container
            .navbar-header
              %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              .logo 
                = image_tag 'logo.png'
              %a.navbar-brand{:href => "#"} Meeting of the Minds

            #navbar.navbar-collapse.collapse
              %ul.nav.navbar-nav
                %li.active
                  %a{:href => "#"} Home
                %li
                  %a{:href => "#about"} About
                %li
                  %a{:href => "#contact"} Contact
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    Reading Interventions
                    %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      %a{:href => "#"} Phonemic Awareness
                    %li
                      %a{:href => "#"} Phonics
                    %li
                      %a{:href => "#"} Oral Reading Fluency
                    %li
                      %a{:href => "#"} Reading Comprehension
                    %li
                      %a{:href => "#"} Vocabulary
                    
              %ul.nav.navbar-nav.navbar-right
                -if current_user
                  %li
                    = link_to "Logout: #{current_user.email}", destroy_user_session_path, method: :delete 
                -else
                  %li
                    = link_to "Login", new_user_session_path
                  %li
                    = link_to "Register", new_user_registration_path


    - if notice || alert
      %p.notice= notice
      %p.alert= alert

    = yield
    %footer.footer
      .container
        %p.lead.footer Place sticky footer content here.

    
    / 
      Bootstrap core JavaScript
      \==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"}
    %script{:src => "../../dist/js/bootstrap.min.js"}
    %script{:src => "../../assets/js/docs.min.js"}
    / IE10 viewport hack for Surface/desktop Windows 8 bug
    %script{:src => "../../assets/js/ie10-viewport-bug-workaround.js"}